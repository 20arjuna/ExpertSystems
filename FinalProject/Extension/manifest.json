{
    "name": "TOSbot",
    "version": "2.0",
    "description": "Analyzes the terms of service of the websites you vist so you don't have to.",
    "permissions": ["activeTab",
      "declarativeContent",
      "storage",
      "*://*.com/"
    ],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "templates/popup.html",
      "default_icon": "images/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["http://*.*", "https://*.*"],
        "run_at": "document_end",
        "js": ["js/content.js"]
      }
    ],
    "manifest_version": 2
  }
