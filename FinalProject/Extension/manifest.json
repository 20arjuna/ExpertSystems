{
    "name": "TOSbot",
    "version": "2.0",
    "description": "Analyzes the terms of service of the websites you vist so you don't have to.",
    "manifest_version": 2,
    "browser_action":
    {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "run_at": "document_idle",
        "js": ["contentScript.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "webNavigation",
      "tabs",
      "nativeMessaging"
    ]

  }
